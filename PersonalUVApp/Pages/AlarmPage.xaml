<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    Title="Notification Alarm Settings"
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PersonalUVApp.Pages.AlarmPage">
    <ContentPage.Content>
        
        <StackLayout Padding="10"
                     Spacing="10"
                     Margin="10"
                     HorizontalOptions="Center">
            
            <Image Source="alarmxx.png"  />
            
            <Label Text="Set Alarm" HorizontalOptions="Center" />
            
            <TimePicker 
            x:Name="tpAlarm"
            HorizontalOptions="Center" />
        
            <Button Text="Set Alarm" 
                    Clicked="CreateAlarm"
                    BackgroundColor="#3897F0" TextColor="White" />
            
            <TimePicker 
            x:Name="tpNotificationAlarm"
            HorizontalOptions="Center" />
            
            <Button Text="Set Notification Alarm" 
                    Clicked="CreateNotificationAlarm"
                    BackgroundColor="#3897F0" TextColor="White" />
            
        </StackLayout>
        
        
    </ContentPage.Content>
</ContentPage>
